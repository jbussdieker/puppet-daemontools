source 'https://rubygems.org'

puppet_version = ENV.key?('PUPPET_VERSION') ? "= #{ENV['PUPPET_VERSION']}" : ['>= 2.7']

gem 'rake', '~> 11.1', '>= 11.1.2'
gem 'rspec', '~> 3.4', '>= 3.4.0'
gem 'rspec-puppet', '~> 2.4', '>= 2.4.0'
gem 'puppet', puppet_version
gem 'puppetlabs_spec_helper', '~> 1.1', '>= 1.1.1'
